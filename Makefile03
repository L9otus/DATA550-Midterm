## Makefile for association analysis

# Output files generated by the association analysis script
output/mortality_logit_results.png output/lm_severity_results.png \
output/logit_mortality_results.csv output/lm_severity_results.csv \
output/diabetes_icu_results.csv: code/03_association.R covid_sub.csv
	Rscript code/03_association.R

.PHONY: association_analysis
association_analysis: output/mortality_logit_results.png \
output/lm_severity_results.png output/logit_mortality_results.csv \
output/lm_severity_results.csv output/diabetes_icu_results.csv

# Clean up generated files
.PHONY: clean
clean:
	rm -f output/* && rm -f *.html && rm -f *.pdf
